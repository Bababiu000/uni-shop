.search-container {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
}
.cate-container {
  display: flex;
  height: 100vh;
  font-size: 12px;
}
.cate-container .left-scroll-view {
  width: 90px;
}
.cate-container .left-scroll-view .left-scroll-view-item {
  box-sizing: border-box;
  width: 90px;
  height: 100rpx;
  line-height: 100rpx;
  padding: 0 20rpx;
  background-color: #f7f7f7;
  font-size: 12px;
}
.cate-container .left-scroll-view .left-scroll-view-item.active {
  position: relative;
  background-color: #fff;
}
.cate-container .left-scroll-view .left-scroll-view-item.active::before {
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  content: '';
  display: block;
  width: 5rpx;
  height: 50rpx;
  background-color: #c00000;
}
.cate-container .right-scroll-view {
  flex: 1;
}
.cate-container .right-scroll-view .cate-lv2-list {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.cate-container .right-scroll-view .cate-lv2-list .cate-lv2-item {
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}
.cate-container .right-scroll-view .cate-lv2-list .cate-lv2-item .cate-lv2-title {
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #eee;
  border-top: 1px solid #eee;
}
.cate-container .right-scroll-view .cate-lv2-list .cate-lv2-item .cate-lv3-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
}
.cate-container .right-scroll-view .cate-lv2-list .cate-lv2-item .cate-lv3-list .cate-lv3-item {
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  height: 200rpx;
  width: 33.33%;
  padding: 15rpx;
}
.cate-container .right-scroll-view .cate-lv2-list .cate-lv2-item .cate-lv3-list .cate-lv3-item image {
  height: 160rpx;
  width: 100%;
}

